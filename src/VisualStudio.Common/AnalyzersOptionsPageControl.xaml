<UserControl x:Class="Roslynator.VisualStudio.AnalyzersOptionsPageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Roslynator.VisualStudio"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
  <UserControl.Resources>
    <Style TargetType="Button">
      <Setter Property="MinWidth" Value="75"/>
      <Setter Property="MinHeight" Value="25"/>
      <Setter Property="Margin" Value="0,5,5,5"/>
      <Setter Property="Padding" Value="5"/>
    </Style>
  </UserControl.Resources>
  <DockPanel Focusable="false" Margin="0,10,0,0">
    <WrapPanel DockPanel.Dock="Left">
      <TextBlock TextWrapping="WrapWithOverflow" Margin="0,0,0,10">
      Default configuration of analyzers can be changed by using ruleset file at the following location: "%LOCALAPPDATA%\JosefPihrt\Roslynator\VisualStudio\2019\roslynator.ruleset"
      </TextBlock>
      <TextBlock TextWrapping="WrapWithOverflow" Margin="0,0,0,10">
      IMPORTANT: Visual Studio restart is required for changes to take effect.
      </TextBlock>
      <Button Content="Open location" Click="OpenLocation_Click" />
    </WrapPanel>
  </DockPanel>
</UserControl>
